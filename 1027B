//WA on test 7
#include <bits/stdc++.h>

using namespace std;
typedef long long ll;

ll f(ll x, ll y, ll n)
{
  double r=double(n*(y-1)/double(2)+(x+1)/double(2));
  ll res=floor(r);
  return res;
}
int main()
{
  ll n,q,x,y;
  cin >> n >> q;
  while(q--)
  {
    cin >> y >> x;
    ll res=f(x,y,n);
    if((x+y)&1)
      res+=ceil((n*n)/2)+(n&1);
    cout << res<<endl;
  }

}
