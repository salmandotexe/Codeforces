#include <iostream>

using namespace std;

int main()
{
    int p=0,u=0,N,x;
    cin >> N;
    while (N--)
    {
        cin >> x;
        if(x!=-1)
        {
            p+=x;
        }
        else
        {
            if(p<=0)
                u++;
            else
                p--;
        }
    }
    cout << u <<endl;
}
